{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "settings": {
       "import/resolver": {
         "node": {
           "extensions": [".js", ".jsx", ".ts", ".tsx"]
         }
       }
     },
    "rules": {
      "import/extensions": "off",
      "no-console": 1,
      "no-shadow": "off",
      "no-tabs": "off",
      "@typescript-eslint/semi": ["error"],
      "lines-between-class-members": "off",
      "linebreak-style": "off",
      "semi": "off",
      "@typescript-eslint/semi": ["error"],
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/naming-convention": [
        "error",
        {
          "selector": "variable",
          "format": ["camelCase", "PascalCase"]
        }
      ]
    }
}
